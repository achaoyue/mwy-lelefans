<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lelefans.mwy.dao.UserDao">
    <sql id="table_name">
      user
    </sql>

    <select id="getUserByLoginId" resultType="com.lelefans.mwy.dao.Entity.UserEntity">
        select * from user where login_id=#{loginId} limit 1
    </select>
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        insert into
        <include refid="table_name"/>
        (login_id,pwd,name,mail,phone,create_ip,create_time)
        values (#{loginId},#{pwd},#{name},#{mail},#{phone},#{createIp},#{createTime})
    </insert>
    <update id="updateUser">
        update <include refid="table_name"/>
        set
        login_id = #{loginId},
        pwd=#{pwd},
        name=#{name},
        mail=#{mail},
        phone=#{phone}
        where id = #{id}
    </update>
</mapper>